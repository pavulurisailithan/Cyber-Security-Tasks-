def assess_password_strength(password):
    score = 0
    criteria = {
        "length_min": 8,
        "has_uppercase": False,
        "has_lowercase": False,
        "has_digit": False,
        "has_special": False
    }

    # Check length
    if len(password) >= criteria["length_min"]:
        score += 1
    
    # Check for character types
    for char in password:
        if char.isupper():
            criteria["has_uppercase"] = True
        elif char.islower():
            criteria["has_lowercase"] = True
        elif char.isdigit():
            criteria["has_digit"] = True
        else:
            criteria["has_special"] = True
            
    # Add to score based on criteria met
    if criteria["has_uppercase"]:
        score += 1
    if criteria["has_lowercase"]:
        score += 1
    if criteria["has_digit"]:
        score += 1
    if criteria["has_special"]:
        score += 1

    return score


def get_strength_level(score):
    if score == 5:
        return "Very Strong"
    elif score == 4:
        return "Strong"
    elif score == 3:
        return "Moderate"
    elif score == 2:
        return "Weak"
    else:
        return "Very Weak"


if __name__ == "__main__":
    password = input("Enter a password to assess its strength: ")
    strength_score = assess_password_strength(password)
    strength_level = get_strength_level(strength_score)
    print(f"Password strength score: {strength_score}/5")
    print(f"Password strength level: {strength_level}")
